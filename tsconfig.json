{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom", "es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "downlevelIteration": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.d.ts"
  ],
  "include": [
    "src"
  ]
}